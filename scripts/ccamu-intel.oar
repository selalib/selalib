#!/bin/bash
#OAR -n selalib 
#OAR -p cluster
#OAR -l nodes=4,walltime=00:40:00
#OAR -O selalib.out
#OAR -E selalib.err
module purge
module load hdf5/intel/1.8.8
module load fftw/intel/3.3
module load intel/13.1.2
module load cmake/2.8.7
export HDF5_ROOT=/softs/hdf5/intel/1.8.8
export FFTW_ROOT=/softs/fftw/intel/3.3
cd /scratch/pnavaro
mkdir selalib-intel
cd selalib-intel; {
cmake ${HOME}/selalib -DCMAKE_BUILD_TYPE=Release -DCMAKE_FORTRAN_COMPILER=ifort
make NightlyUpdate
make NightlyConfigure
make NightlyBuild
make NightlyTest
make NightlySubmit
}; cd -
rm -rf /scratch/pnavaro/selalib-intel
