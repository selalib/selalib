&geometry
  center_mesh_x1 = 0.
  center_mesh_x2 = 0.
  radius = 1.
  num_cells = 60
  cells_min = 20
  cells_max = 100
  cells_step = 20
/

&initial_function
  gauss_x1 = -0.4
  gauss_x2 = -0.4
  gauss_sig = 0.04
  gauss_amp = 1.
/

&time_iterations
  dt = 0.05
  number_iterations = 100
  freq_diag = 10
/

&interpolation
  model_name = "SLL_LINEAR_ADV"
  spline_degree = 1
  a0 = 0.15
  a1 = 0.15
/
