&geometry
  center_mesh_x1 = 0.
  center_mesh_x2 = 0.
  radius = 1.
  num_cells = 60
/

&initial_function
  gauss_x1 = -0.5
  gauss_x2 = -0.25
  gauss_sig = 0.05
  gauss_amp = 1.
/

&time_iterations
  dt = 0.05
  number_iterations = 100
  freq_diag = 10
/

&interpolation
  num_method_case = "SLL_LINEAR_ADV"
  spline_degree = 2
  a0 = 0.1
  a1 = 0.1
/
