&splines
  n1 = 128
  n2 = 256
  p1 = 3
  p2 = 3
/

&geometry
  maptype = 0
/

&time_integration
  dt = 0.05
  iter = 1200
/

&characteristics
  abs_tol = 1.0e-12
  rel_tol = 1.0e-14
  maxiter = 100
/

&initial_condition
  test_case = "vortex_in_cell"
/

&diagnostics
  diag_freq = 20
  nx1       = 512
  nx2       = 512
/

&point_charges
  nc = 1
/

&point_charges_specs
  intensity(1)  = 0.0025
  location(:,1) = 0.4, 0.0
/
