&sim_params
        delta_t = 0.05
        n_time_steps = 2
        beta = 0.0001
        initial_distrib = "cossum_onegaussian"
        initial_bfield = "cos"
/

&cossum_onegaussian
        kx = 1.25
        alpha = 0.0
        v_thermal = 0.2  0.005773502691896
        v_mean = 0.0 0.0
/      

&grid_dims
        ng_x = 32
        x1_min = 0.0
        x1_max = 5.02654824574
/

&pic_params
        n_particles = 100000
        sampling_case = "particle_sampling_sobol_symmetric"
        splitting_case = "splitting_symplectic"     
        spline_degree = 3
/
