
default:
	(cd memory; scons)
	(cd precision; scons)
	(cd assert; scons)
	(cd constants; scons)
	(cd utilities; scons)
	(cd low_level_file_io; scons)
	(cd non_linear_solvers; scons)
	(cd splines; scons)
	(cd WENO; scons)	
	(cd fft; scons)
	(cd collective; scons CPATH='.' LPATH='.')
	(cd remap; scons)
	(cd timer; scons)
	(cd interpolators; scons)
	(cd mapped_meshes; scons)
	(cd ode_solvers; scons)
	(cd fields; scons)
	(cd distribution_function; scons)
	#(cd poisson_solvers; scons)
	#(cd BSL; scons)
	#(cd CSL; scons)		

clean:
	(cd constants; scons -c)
	(cd precision; scons -c)	
	(cd memory; scons -c)
	(cd assert; scons -c)
	(cd non_linear_solvers; scons -c)
	(cd splines; scons -c)
	(cd WENO; scons -c)	
	(cd utilities; scons -c)
	(cd fft; scons -c)
	(cd low_level_file_io; scons -c)
	(cd integration; scons -c)
	(cd remap; scons -c)
	(cd collective; scons -c)
	(cd timer; scons -c)
	(cd interpolators; scons -c)
	(cd mapped_meshes; scons -c)
	(cd fields; scons -c)
	(cd ode_solvers; scons -c)
	(cd distribution_function; scons -c)
	#(cd poisson_solvers; scons -c)
	#(cd BSL; scons -c)
	#(cd CSL; scons -c)	
	find . -name '*.mod' -exec rm {} \;
	find . -name '*.a' -exec rm {} \;
	find . -name '*.o' -exec rm {} \;
